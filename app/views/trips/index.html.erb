<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <%#<th>User</th>%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.name %></td>
        <td><%= trip.description %></td>
        <td><%= trip.user.id %></td>
        <td><%= link_to 'Show', trip_path(trip), class:"ui button" %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip), class: "ui button" %></td>
        <td><%= link_to 'Destroy', @trip, method: :delete, data: { confirm: 'Are you sure?' }, class: "ui button"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


